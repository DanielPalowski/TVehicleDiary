@using VehicleDiary.Web.ViewModels
@model DBOilModelVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["PageTitle"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'oil': {
                            50: '#fff7ed',
                            100: '#ffedd5',
                            200: '#fed7aa',
                            300: '#fdba74',
                            400: '#fb923c',
                            500: '#f97316',
                            600: '#ea580c',
                            700: '#c2410c',
                            800: '#9a3412',
                            900: '#7c2d12',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-gradient-to-r from-gray-900 to-gray-800 text-white">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between py-4">
                <a href="@Url.Action("Index", "Vehicle")" class="flex items-center gap-2 px-3 py-2 bg-white/10 rounded-lg hover:bg-white/20 transition">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    <span class="font-medium">@Localizer["BackButton"]</span>
                </a>
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-oil-500 to-orange-500 flex items-center justify-center">
                        <i data-lucide="droplet" class="w-5 h-5"></i>
                    </div>
                    <div>
                        <h1 class="font-bold">@Localizer["HeaderTitle"]</h1>
                        <p class="text-sm text-gray-300">@Localizer["HeaderSubtitle"]</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
        <div class="max-w-6xl mx-auto">
            <!-- Page Title -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">@Localizer["MainHeading"]</h1>
                <p class="text-gray-600">@Localizer["MainSubheading"]</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Form Section -->
                <div class="space-y-6">
                    <!-- Form Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-10 h-10 rounded-lg bg-oil-100 flex items-center justify-center">
                                <i data-lucide="plus-circle" class="w-5 h-5 text-oil-600"></i>
                            </div>
                            <div>
                                <h2 class="text-xl font-bold text-gray-900">@Localizer["AddOilChangeHeading"]</h2>
                                <p class="text-sm text-gray-600">@Localizer["AddOilChangeSubheading"]</p>
                            </div>
                        </div>

                        <form asp-action="Oil" method="post" id="oilForm">
                            <input type="hidden" asp-for="VehicleId" />

                            <div class="space-y-4">
                                <!-- Amount & Type -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label asp-for="OilAmount" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelOilAmount"]
                                        </label>
                                        <div class="relative">
                                            <input type="number" step="0.1" asp-for="OilAmount"
                                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-oil-500 focus:border-oil-500"
                                                   placeholder="@Localizer["PlaceholderOilAmount"]" required>
                                        </div>
                                        <span asp-validation-for="OilAmount" class="text-red-500 text-sm"></span>
                                    </div>

                                    <div>
                                        <label asp-for="OilType" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelOilType"]
                                        </label>
                                        <input type="text" asp-for="OilType"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-oil-500 focus:border-oil-500"
                                               placeholder="@Localizer["PlaceholderOilType"]" required>
                                        <span asp-validation-for="OilType" class="text-red-500 text-sm"></span>
                                    </div>
                                </div>

                                <!-- Price & Date -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label asp-for="OilPrice" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelTotalPrice"]
                                        </label>
                                        <div class="relative">
                                            <input type="number" step="0.01" asp-for="OilPrice"
                                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-oil-500 focus:border-oil-500"
                                                   placeholder="@Localizer["PlaceholderTotalPrice"]" required>
                                        </div>
                                        <span asp-validation-for="OilPrice" class="text-red-500 text-sm"></span>
                                    </div>

                                    <div>
                                        <label asp-for="OilDate" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelChangeDate"]
                                        </label>
                                        <input type="date" asp-for="OilDate"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-oil-500 focus:border-oil-500"
                                               value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                                        <span asp-validation-for="OilDate" class="text-red-500 text-sm"></span>
                                    </div>
                                </div>

                                <!-- Mileage -->
                                <div>
                                    <label asp-for="OilMileage" class="block text-sm font-medium text-gray-700 mb-1">
                                        @Localizer["LabelMileage"]
                                    </label>
                                    <input type="number" asp-for="OilMileage"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-oil-500 focus:border-oil-500"
                                           placeholder="@Localizer["PlaceholderMileage"]" required>
                                    <span asp-validation-for="OilMileage" class="text-red-500 text-sm"></span>
                                </div>

                                <!-- Description -->
                                <div>
                                    <label asp-for="OilDescription" class="block text-sm font-medium text-gray-700 mb-1">
                                        @Localizer["LabelNotesOptional"]
                                    </label>
                                    <input type="text" asp-for="OilDescription"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-oil-500 focus:border-oil-500"
                                           placeholder="@Localizer["PlaceholderNotes"]">
                                    <span asp-validation-for="OilDescription" class="text-red-500 text-sm"></span>
                                </div>

                                <!-- Submit Button -->
                                <div class="pt-4">
                                    <button type="submit"
                                            class="w-full bg-gradient-to-r from-oil-600 to-orange-600 text-white font-medium py-3 px-4 rounded-lg hover:from-oil-700 hover:to-orange-700 transition flex items-center justify-center gap-2">
                                        <i data-lucide="save" class="w-5 h-5"></i>
                                        @Localizer["SaveOilChangeButton"]
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Quick Stats -->
                    @if (Model.OilViews != null && Model.OilViews.Any())
                    {
                        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                            <h3 class="text-lg font-bold text-gray-900 mb-4">@Localizer["QuickStatsTitle"]</h3>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                <div class="text-center p-3 bg-oil-50 rounded-lg">
                                    <div class="text-2xl font-bold text-oil-600">@Model.OilViews.Count()</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatTotal"]</div>
                                </div>
                                <div class="text-center p-3 bg-oil-50 rounded-lg">
                                    <div class="text-2xl font-bold text-oil-600">€@Model.OilViews.Sum(o => o.OilPrice).ToString("F2")</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatTotalCost"]</div>
                                </div>
                                <div class="text-center p-3 bg-oil-50 rounded-lg">
                                    <div class="text-2xl font-bold text-oil-600">@Model.OilViews.Average(o => o.OilAmount).ToString("F1")L</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatAvgAmount"]</div>
                                </div>
                                <div class="text-center p-3 bg-oil-50 rounded-lg">
                                    <div class="text-sm text-oil-600 font-medium">@Model.OilViews.Min(o => o.OilDate).ToString()</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatFirst"]</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- History Section -->
                <div class="space-y-6">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-bold text-gray-900">@Localizer["HistoryTitle"]</h2>
                        <span class="text-sm text-gray-600">@Localizer["RecordsCount", Model.OilViews?.Count() ?? 0]</span>
                    </div>

                    @if (Model.OilViews != null && Model.OilViews.Any())
                    {
                        <div class="space-y-3">
                            @foreach (var entry in Model.OilViews.OrderByDescending(o => o.OilDate))
                            {
                                <div class="bg-white rounded-lg border border-gray-200 p-4 hover:border-oil-300 transition" id="oil-@entry.Id">
                                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                        <!-- Left: Details -->
                                        <div class="flex-1">
                                            <div class="flex items-center gap-3 mb-2">
                                                <div class="w-8 h-8 rounded-lg bg-oil-100 flex items-center justify-center">
                                                    <i data-lucide="droplet" class="w-4 h-4 text-oil-600"></i>
                                                </div>
                                                <div>
                                                    <div class="flex items-center gap-2">
                                                        <span class="font-bold text-gray-900">@entry.OilType</span>
                                                        <span class="px-2 py-1 bg-oil-100 text-oil-700 text-xs font-medium rounded-full">
                                                            @entry.OilDate.ToString("d MMM yyyy")
                                                        </span>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(entry.OilDescription))
                                                    {
                                                        <p class="text-sm text-gray-600 mt-1">@entry.OilDescription</p>
                                                    }
                                                </div>
                                            </div>

                                            <div class="flex flex-wrap gap-2">
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                                    <i data-lucide="beaker" class="w-3 h-3"></i>
                                                    @Localizer["UnitLiters", entry.OilAmount]
                                                </span>
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                                    <i data-lucide="gauge" class="w-3 h-3"></i>
                                                    @Localizer["UnitKilometers", entry.OilMileage]
                                                </span>
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-oil-100 text-oil-700 text-sm rounded-full">
                                                    <i data-lucide="euro" class="w-3 h-3"></i>
                                                    €@entry.OilPrice
                                                </span>
                                            </div>
                                        </div>

                                        <!-- Right: Delete Button -->
                                        <button onclick="deleteOilChange('@entry.Id')"
                                                class="inline-flex items-center gap-2 px-3 py-2 text-red-600 bg-red-50 hover:bg-red-100 rounded-lg transition">
                                            <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            <span class="text-sm font-medium">@Localizer["DeleteButton"]</span>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="bg-white rounded-xl border-2 border-dashed border-gray-300 p-8 text-center">
                            <div class="w-12 h-12 rounded-full bg-oil-100 flex items-center justify-center mx-auto mb-4">
                                <i data-lucide="droplet" class="w-6 h-6 text-oil-600"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">@Localizer["EmptyStateTitle"]</h3>
                            <p class="text-gray-600 mb-4">@Localizer["EmptyStateMessage"]</p>
                            <p class="text-sm text-gray-500">@Localizer["EmptyStateHint"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-200 mt-12">
        <div class="container mx-auto px-4 py-6">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-oil-100 flex items-center justify-center">
                        <i data-lucide="droplet" class="w-4 h-4 text-oil-600"></i>
                    </div>
                    <span class="font-medium text-gray-900">@Localizer["FooterBrandName"]</span>
                </div>
                <p class="text-sm text-gray-600">@Localizer["FooterCopyright", DateTime.Now.Year]</p>
            </div>
        </div>
    </footer>

    <script>
        // Localized strings for JavaScript
        const deleteConfirmMessage = '@Localizer["ConfirmDelete"]';
        const deleteErrorMessage = '@Localizer["ErrorDelete"]';
        const savingButtonText = '@Localizer["SavingButtonText"]';

        // Initialize Lucide icons
        lucide.createIcons();

        // Delete function
        function deleteOilChange(id) {
            if (confirm(deleteConfirmMessage)) {
                $.ajax({
                    url: "@Url.Action("Delete", "Oil")/" + id,
                    type: "DELETE",
                    success: function () {
                        const element = document.getElementById('oil-' + id);
                        if (element) {
                            element.style.opacity = '0';
                            element.style.transform = 'translateY(-10px)';
                            setTimeout(() => element.remove(), 300);
                        }
                    },
                    error: function () {
                        alert(deleteErrorMessage);
                    }
                });
            }
        }

        // Form validation
        document.getElementById('oilForm')?.addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalContent = submitBtn.innerHTML;

            // Show loading state
            submitBtn.innerHTML = `
                <div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                ${savingButtonText}
            `;
            submitBtn.disabled = true;

            // Re-enable after 5 seconds if submission fails
            setTimeout(() => {
                submitBtn.innerHTML = originalContent;
                submitBtn.disabled = false;
            }, 5000);
        });

        // Format inputs
        document.querySelectorAll('input[type="number"]').forEach(input => {
            input.addEventListener('blur', function() {
                if (this.value && !isNaN(this.value)) {
                    if (this.name.includes('Price')) {
                        this.value = parseFloat(this.value).toFixed(2);
                    } else if (this.name.includes('Amount')) {
                        this.value = parseFloat(this.value).toFixed(1);
                    } else if (this.name.includes('Mileage')) {
                        this.value = parseInt(this.value);
                    }
                }
            });
        });
    </script>
</body>
</html>