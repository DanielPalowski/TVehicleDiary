@using VehicleDiary.Web.ViewModels
@model DBTiresModelVM
@using VehicleDiary.Core.Constants
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["PageTitle"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'tire': {
                            50: '#faf5ff',
                            100: '#f3e8ff',
                            200: '#e9d5ff',
                            300: '#d8b4fe',
                            400: '#c084fc',
                            500: '#a855f7',
                            600: '#9333ea',
                            700: '#7e22ce',
                            800: '#6b21a8',
                            900: '#581c87',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-gradient-to-r from-gray-900 to-gray-800 text-white">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between py-4">
                <a href="@Url.Action("Index", "Vehicle")" class="flex items-center gap-2 px-3 py-2 bg-white/10 rounded-lg hover:bg-white/20 transition">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    <span class="font-medium">@Localizer["BackButton"]</span>
                </a>
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-tire-500 to-purple-500 flex items-center justify-center">
                        <i data-lucide="circle" class="w-5 h-5"></i>
                    </div>
                    <div>
                        <h1 class="font-bold">@Localizer["HeaderTitle"]</h1>
                        <p class="text-sm text-gray-300">@Localizer["HeaderSubtitle"]</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
        <div class="max-w-6xl mx-auto">
            <!-- Page Title -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">@Localizer["MainHeading"]</h1>
                <p class="text-gray-600">@Localizer["MainSubheading"]</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Form Section -->
                <div class="space-y-6">
                    <!-- Form Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-10 h-10 rounded-lg bg-tire-100 flex items-center justify-center">
                                <i data-lucide="plus-circle" class="w-5 h-5 text-tire-600"></i>
                            </div>
                            <div>
                                <h2 class="text-xl font-bold text-gray-900">@Localizer["AddTireChangeHeading"]</h2>
                                <p class="text-sm text-gray-600">@Localizer["AddTireChangeSubheading"]</p>
                            </div>
                        </div>

                        <form asp-action="Tires" method="post" id="tireForm">
                            <input type="hidden" asp-for="VehicleId" />

                            <div class="space-y-4">
                                <!-- Price & Size -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label asp-for="TirePrice" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelSetPrice"]
                                        </label>
                                        <div class="relative">
                                            <input type="number" step="0.01" asp-for="TirePrice"
                                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tire-500 focus:border-tire-500"
                                                   placeholder="@Localizer["PlaceholderSetPrice"]" required>
                                        </div>
                                        <span asp-validation-for="TirePrice" class="text-red-500 text-sm"></span>
                                    </div>

                                    <div>
                                        <label asp-for="TireSize" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelTireSize"]
                                        </label>
                                        <input type="text" asp-for="TireSize"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tire-500 focus:border-tire-500"
                                               placeholder="@Localizer["PlaceholderTireSize"]" required>
                                        <span asp-validation-for="TireSize" class="text-red-500 text-sm"></span>
                                    </div>
                                </div>

                                <!-- Brand & Quantity -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label asp-for="TireBrand" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelBrand"]
                                        </label>
                                        <input type="text" asp-for="TireBrand"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tire-500 focus:border-tire-500"
                                               placeholder="@Localizer["PlaceholderBrand"]" required>
                                        <span asp-validation-for="TireBrand" class="text-red-500 text-sm"></span>
                                    </div>

                                    <div>
                                        <label asp-for="TireAmount" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelQuantity"]
                                        </label>
                                        <div class="relative">
                                            <input type="number" asp-for="TireAmount"
                                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tire-500 focus:border-tire-500"
                                                   placeholder="@Localizer["PlaceholderQuantity"]" required>
                                        </div>
                                        <span asp-validation-for="TireAmount" class="text-red-500 text-sm"></span>
                                    </div>
                                </div>

                                <!-- Type & Date -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label asp-for="TireType" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelTireType"]
                                        </label>
                                        <select asp-for="TireType" asp-items="Html.GetEnumSelectList<TireTypesEnum>()"
                                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tire-500 focus:border-tire-500">
                                            <option value="">@Localizer["PlaceholderSelectType"]</option>
                                        </select>
                                        <span asp-validation-for="TireType" class="text-red-500 text-sm"></span>
                                    </div>

                                    <div>
                                        <label asp-for="TireDate" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelChangeDate"]
                                        </label>
                                        <input type="date" asp-for="TireDate"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tire-500 focus:border-tire-500"
                                               value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                                        <span asp-validation-for="TireDate" class="text-red-500 text-sm"></span>
                                    </div>
                                </div>

                                <!-- Optional Fields -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label asp-for="TireChangedPrice" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelInstallPrice"]
                                        </label>
                                        <div class="relative">
                                            <input type="number" step="0.01" asp-for="TireChangedPrice"
                                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tire-500 focus:border-tire-500"
                                                   placeholder="@Localizer["PlaceholderInstallPrice"]">
                                        </div>
                                        <span asp-validation-for="TireChangedPrice" class="text-red-500 text-sm"></span>
                                    </div>

                                    <div>
                                        <label asp-for="TireShopWhereBought" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelShop"]
                                        </label>
                                        <input type="text" asp-for="TireShopWhereBought"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tire-500 focus:border-tire-500"
                                               placeholder="@Localizer["PlaceholderShop"]">
                                        <span asp-validation-for="TireShopWhereBought" class="text-red-500 text-sm"></span>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div>
                                    <label asp-for="TireDescription" class="block text-sm font-medium text-gray-700 mb-1">
                                        @Localizer["LabelNotesOptional"]
                                    </label>
                                    <input type="text" asp-for="TireDescription"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-tire-500 focus:border-tire-500"
                                           placeholder="@Localizer["PlaceholderNotes"]">
                                    <span asp-validation-for="TireDescription" class="text-red-500 text-sm"></span>
                                </div>

                                <!-- Submit Button -->
                                <div class="pt-4">
                                    <button type="submit"
                                            class="w-full bg-gradient-to-r from-tire-600 to-purple-600 text-white font-medium py-3 px-4 rounded-lg hover:from-tire-700 hover:to-purple-700 transition flex items-center justify-center gap-2">
                                        <i data-lucide="save" class="w-5 h-5"></i>
                                        @Localizer["SaveTireChangeButton"]
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Quick Stats -->
                    @if (Model.TireViews != null && Model.TireViews.Any())
                    {
                        var totalCost = Model.TireViews.Sum(t => t.TirePrice + t.TireChangedPrice);
                        var totalTires = Model.TireViews.Sum(t => t.TireAmount);

                        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                            <h3 class="text-lg font-bold text-gray-900 mb-4">@Localizer["QuickStatsTitle"]</h3>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                <div class="text-center p-3 bg-tire-50 rounded-lg">
                                    <div class="text-2xl font-bold text-tire-600">@Model.TireViews.Count()</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatChanges"]</div>
                                </div>
                                <div class="text-center p-3 bg-tire-50 rounded-lg">
                                    <div class="text-2xl font-bold text-tire-600">€@totalCost.ToString()</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatTotalCost"]</div>
                                </div>
                                <div class="text-center p-3 bg-tire-50 rounded-lg">
                                    <div class="text-2xl font-bold text-tire-600">@totalTires</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatTotalTires"]</div>
                                </div>
                                <div class="text-center p-3 bg-tire-50 rounded-lg">
                                    @{
                                        var avgPrice = totalTires > 0 ? totalCost / totalTires : 0;
                                    }
                                    <div class="text-2xl font-bold text-tire-600">€@avgPrice.ToString()</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatAvgPerTire"]</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- History Section -->
                <div class="space-y-6">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-bold text-gray-900">@Localizer["HistoryTitle"]</h2>
                        <span class="text-sm text-gray-600">@Localizer["RecordsCount", Model.TireViews?.Count() ?? 0]</span>
                    </div>

                    @if (Model.TireViews != null && Model.TireViews.Any())
                    {
                        <div class="space-y-3">
                            @foreach (var entry in Model.TireViews.OrderByDescending(t => t.TireDate))
                            {
                                <div class="bg-white rounded-lg border border-gray-200 p-4 hover:border-tire-300 transition" id="tire-@entry.Id">
                                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                        <!-- Left: Details -->
                                        <div class="flex-1">
                                            <div class="flex items-center gap-3 mb-2">
                                                <div class="w-8 h-8 rounded-lg bg-tire-100 flex items-center justify-center">
                                                    <i data-lucide="circle" class="w-4 h-4 text-tire-600"></i>
                                                </div>
                                                <div>
                                                    <div class="flex items-center gap-2">
                                                        <span class="font-bold text-gray-900">@entry.TireBrand</span>
                                                        <span class="px-2 py-1 bg-tire-100 text-tire-700 text-xs font-medium rounded-full">
                                                            @entry.TireDate.ToString("d MMM yyyy")
                                                        </span>
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(entry.TireDescription))
                                                    {
                                                        <p class="text-sm text-gray-600 mt-1">@entry.TireDescription</p>
                                                    }
                                                </div>
                                            </div>

                                            <div class="flex flex-wrap gap-2">
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                                    <i data-lucide="hash" class="w-3 h-3"></i>
                                                    @entry.TireSize
                                                </span>
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                                    <i data-lucide="package" class="w-3 h-3"></i>
                                                    @Localizer["TireAmountFormat", entry.TireAmount]
                                                </span>
                                                @if (entry.TireType != null)
                                                {
                                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                                        <i data-lucide="circle-dashed" class="w-3 h-3"></i>
                                                        @Localizer[$"TireType_{entry.TireType}"]
                                                    </span>
                                                }
                                                @if (!string.IsNullOrEmpty(entry.TireShopWhereBought))
                                                {
                                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                                        <i data-lucide="store" class="w-3 h-3"></i>
                                                        @entry.TireShopWhereBought
                                                    </span>
                                                }
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-tire-100 text-tire-700 text-sm rounded-full">
                                                    <i data-lucide="euro" class="w-3 h-3"></i>
                                                    €@(entry.TirePrice + entry.TireChangedPrice)
                                                    @if (entry.TireChangedPrice > 0)
                                                    {
                                                        <span class="text-xs">@Localizer["PriceBreakdown", entry.TirePrice, entry.TireChangedPrice]</span>
                                                    }
                                                </span>
                                            </div>
                                        </div>

                                        <!-- Right: Delete Button -->
                                        <button onclick="deleteTire('@entry.Id')"
                                                class="inline-flex items-center gap-2 px-3 py-2 text-red-600 bg-red-50 hover:bg-red-100 rounded-lg transition">
                                            <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            <span class="text-sm font-medium">@Localizer["DeleteButton"]</span>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="bg-white rounded-xl border-2 border-dashed border-gray-300 p-8 text-center">
                            <div class="w-12 h-12 rounded-full bg-tire-100 flex items-center justify-center mx-auto mb-4">
                                <i data-lucide="circle" class="w-6 h-6 text-tire-600"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">@Localizer["EmptyStateTitle"]</h3>
                            <p class="text-gray-600 mb-4">@Localizer["EmptyStateMessage"]</p>
                            <p class="text-sm text-gray-500">@Localizer["EmptyStateHint"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-200 mt-12">
        <div class="container mx-auto px-4 py-6">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-tire-100 flex items-center justify-center">
                        <i data-lucide="circle" class="w-4 h-4 text-tire-600"></i>
                    </div>
                    <span class="font-medium text-gray-900">@Localizer["FooterBrandName"]</span>
                </div>
                <p class="text-sm text-gray-600">@Localizer["FooterCopyright", DateTime.Now.Year]</p>
            </div>
        </div>
    </footer>

    <script>
        // Localized strings for JavaScript
        const deleteConfirmMessage = '@Localizer["ConfirmDelete"]';
        const deleteErrorMessage = '@Localizer["ErrorDelete"]';
        const savingButtonText = '@Localizer["SavingButtonText"]';

        // Initialize Lucide icons
        lucide.createIcons();

        // Delete function
        function deleteTire(id) {
            if (confirm(deleteConfirmMessage)) {
                $.ajax({
                    url: "@Url.Action("Delete", "Tires")/" + id,
                    type: "DELETE",
                    success: function () {
                        const element = document.getElementById('tire-' + id);
                        if (element) {
                            element.style.opacity = '0';
                            element.style.transform = 'translateY(-10px)';
                            setTimeout(() => element.remove(), 300);
                        }
                    },
                    error: function () {
                        alert(deleteErrorMessage);
                    }
                });
            }
        }

        // Form validation
        document.getElementById('tireForm')?.addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalContent = submitBtn.innerHTML;

            // Show loading state
            submitBtn.innerHTML = `
                <div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                ${savingButtonText}
            `;
            submitBtn.disabled = true;

            // Re-enable after 5 seconds if submission fails
            setTimeout(() => {
                submitBtn.innerHTML = originalContent;
                submitBtn.disabled = false;
            }, 5000);
        });

        // Format inputs
        document.querySelectorAll('input[type="number"]').forEach(input => {
            input.addEventListener('blur', function() {
                if (this.value && !isNaN(this.value)) {
                    if (this.name.includes('Price')) {
                        this.value = parseFloat(this.value).toFixed(2);
                    } else if (this.name.includes('Amount')) {
                        this.value = parseInt(this.value);
                    }
                }
            });
        });
    </script>
</body>
</html>