@using VehicleDiary.Web.ViewModels
@model DBVignetteModelVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    var vignetteCount = Model.VignetteView.Count();
    const int maxCount = 20;
    bool canAdd = vignetteCount < maxCount;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["PageTitle"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'vignette': {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-gradient-to-r from-gray-900 to-gray-800 text-white">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between py-4">
                <a href="@Url.Action("Index", "Vehicle")" class="flex items-center gap-2 px-3 py-2 bg-white/10 rounded-lg hover:bg-white/20 transition">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    <span class="font-medium">@Localizer["BackButton"]</span>
                </a>
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-vignette-500 to-blue-500 flex items-center justify-center">
                        <i data-lucide="tag" class="w-5 h-5"></i>
                    </div>
                    <div>
                        <h1 class="font-bold">@Localizer["HeaderTitle"]</h1>
                        <p class="text-sm text-gray-300">@Localizer["HeaderSubtitle"]</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
        <div class="max-w-6xl mx-auto">
            <!-- Page Title -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">@Localizer["MainHeading"]</h1>
                <p class="text-gray-600">@Localizer["MainSubheading"]</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Form Section -->
                <div class="space-y-6">
                    <!-- Form Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-10 h-10 rounded-lg bg-vignette-100 flex items-center justify-center">
                                <i data-lucide="plus-circle" class="w-5 h-5 text-vignette-600"></i>
                            </div>
                            <div>
                                <h2 class="text-xl font-bold text-gray-900">@Localizer["AddVignetteHeading"]</h2>
                                <p class="text-sm text-gray-600">@Localizer["AddVignetteSubheading"]</p>
                            </div>
                        </div>

                        <form asp-action="Vignette" method="post" id="vignetteForm">
                            <input type="hidden" asp-for="vehicleId" />

                            <div class="space-y-4">
                                <!-- Country -->
                                <div>
                                    <label asp-for="VignetteCountry" class="block text-sm font-medium text-gray-700 mb-1">
                                        @Localizer["LabelCountry"]
                                    </label>
                                    <select asp-for="VignetteCountry" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-vignette-500 focus:border-vignette-500">
                                        @if (ViewBag.Countries != null)
                                        {
                                            @foreach (var entry in ViewBag.Countries)
                                            {
                                                <option value="@entry.Name">@entry.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="VignetteCountry" class="text-red-500 text-sm"></span>
                                </div>

                                <!-- Date Range -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label asp-for="VignetteValidFrom" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelValidFrom"]
                                        </label>
                                        <input type="date" asp-for="VignetteValidFrom"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-vignette-500 focus:border-vignette-500"
                                               value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                                        <span asp-validation-for="VignetteValidFrom" class="text-red-500 text-sm"></span>
                                    </div>

                                    <div>
                                        <label asp-for="VignetteValidTo" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelValidTo"]
                                        </label>
                                        <input type="date" asp-for="VignetteValidTo"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-vignette-500 focus:border-vignette-500"
                                               value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                                        <span asp-validation-for="VignetteValidTo" class="text-red-500 text-sm"></span>
                                    </div>
                                </div>

                                <!-- Price -->
                                <div>
                                    <label asp-for="VignettePrice" class="block text-sm font-medium text-gray-700 mb-1">
                                        @Localizer["LabelPrice"]
                                    </label>
                                    <div class="relative">
                                        <input type="number" step="0.01" asp-for="VignettePrice"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-vignette-500 focus:border-vignette-500"
                                               placeholder="@Localizer["PricePlaceholder"]" required>
                                    </div>
                                    <span asp-validation-for="VignettePrice" class="text-red-500 text-sm"></span>
                                </div>

                                <!-- Submit Button -->
                                <div class="pt-4">
                                    @if(canAdd)
                                    {
                                        <button type="submit"
                                                class="w-full bg-gradient-to-r from-vignette-600 to-blue-600 text-white font-medium py-3 px-4 rounded-lg hover:from-vignette-700 hover:to-blue-700 transition flex items-center justify-center gap-2">
                                            <i data-lucide="save" class="w-5 h-5"></i>
                                            @Localizer["SaveVignetteButton"]
                                        </button>
                                    }
                                    else
                                    {
                                        <p class="text-danger font-medium px-4 py-2 rounded-lg border border-danger/20 bg-danger/10" style="background-color: rgba(255,10,20,0.6)">
                                            <i class="fas fa-exclamation-triangle mr-2"></i>
                                            @vignetteCount / @maxCount
                                        </p>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Quick Stats -->
                    @if (Model.VignetteView != null && Model.VignetteView.Any())
                    {
                        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                            <h3 class="text-lg font-bold text-gray-900 mb-4">@Localizer["QuickStatsTitle"]</h3>
                            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                                <div class="text-center p-3 bg-vignette-50 rounded-lg">
                                    <div class="text-2xl font-bold text-vignette-600">@Model.VignetteView.Count()</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatTotal"]</div>
                                </div>
                                <div class="text-center p-3 bg-vignette-50 rounded-lg">
                                    <div class="text-2xl font-bold text-vignette-600">€@Model.VignetteView.Sum(o => o.VignettePrice).ToString("F2")</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatTotalCost"]</div>
                                </div>
                                <div class="text-center p-3 bg-vignette-50 rounded-lg">
                                    @{
                                        var activeVignettes = Model.VignetteView.Where(v => v.VignetteValidTo >= DateTime.Today).Count();
                                    }
                                    <div class="text-2xl font-bold text-vignette-600">@activeVignettes</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatActive"]</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- History Section -->
                <div class="space-y-6">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-bold text-gray-900">@Localizer["VignetteHistoryTitle"]</h2>
                        <span class="text-sm text-gray-600">@Localizer["RecordsCount", Model.VignetteView?.Count() ?? 0]</span>
                    </div>

                    @if (Model.VignetteView != null && Model.VignetteView.Any())
                    {
                        <div class="space-y-3">
                            @foreach (var entry in Model.VignetteView.OrderByDescending(o => o.VignetteValidFrom))
                            {
                                <div class="bg-white rounded-lg border border-gray-200 p-4 hover:border-vignette-300 transition" id="vignette-@entry.Id">
                                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                        <!-- Left: Details -->
                                        <div class="flex-1">
                                            <div class="flex items-center gap-3 mb-2">
                                                <div class="w-8 h-8 rounded-lg bg-vignette-100 flex items-center justify-center">
                                                    <i data-lucide="tag" class="w-4 h-4 text-vignette-600"></i>
                                                </div>
                                                <div>
                                                    <div class="flex items-center gap-2">
                                                        <span class="font-bold text-gray-900">@entry.VignetteCountry</span>
                                                        @if (entry.VignetteValidTo >= DateTime.Today)
                                                        {
                                                            <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">
                                                                @Localizer["StatusActive"]
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs font-medium rounded-full">
                                                                @Localizer["StatusExpired"]
                                                            </span>
                                                        }
                                                    </div>
                                                    <p class="text-sm text-gray-600 mt-1">
                                                        @entry.VignetteValidFrom.ToString("d MMM yyyy") - @entry.VignetteValidTo.ToString("d MMM yyyy")
                                                    </p>
                                                </div>
                                            </div>

                                            <div class="flex flex-wrap gap-2">
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                                    <i data-lucide="calendar" class="w-3 h-3"></i>
                                                    @Localizer["DaysLabel", (entry.VignetteValidTo - entry.VignetteValidFrom).Days]
                                                </span>
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-vignette-100 text-vignette-700 text-sm rounded-full">
                                                    <i data-lucide="euro" class="w-3 h-3"></i>
                                                    €@entry.VignettePrice
                                                </span>
                                            </div>
                                        </div>

                                        <!-- Right: Delete Button -->
                                        <button onclick="deleteVignette('@entry.Id')"
                                                class="inline-flex items-center gap-2 px-3 py-2 text-red-600 bg-red-50 hover:bg-red-100 rounded-lg transition">
                                            <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            <span class="text-sm font-medium">@Localizer["DeleteButton"]</span>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="bg-white rounded-xl border-2 border-dashed border-gray-300 p-8 text-center">
                            <div class="w-12 h-12 rounded-full bg-vignette-100 flex items-center justify-center mx-auto mb-4">
                                <i data-lucide="tag" class="w-6 h-6 text-vignette-600"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">@Localizer["EmptyStateTitle"]</h3>
                            <p class="text-gray-600 mb-4">@Localizer["EmptyStateMessage"]</p>
                            <p class="text-sm text-gray-500">@Localizer["EmptyStateHint"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-200 mt-12">
        <div class="container mx-auto px-4 py-6">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-vignette-100 flex items-center justify-center">
                        <i data-lucide="tag" class="w-4 h-4 text-vignette-600"></i>
                    </div>
                    <span class="font-medium text-gray-900">@Localizer["HeaderTitle"]</span>
                </div>
                <p class="text-sm text-gray-600">@Localizer["FooterCopyright", DateTime.Now.Year]</p>
            </div>
        </div>
    </footer>

    <script>
        // Localized strings for JavaScript
        const deleteConfirmMessage = '@Localizer["ConfirmDelete"]';
        const deleteErrorMessage = '@Localizer["ErrorDelete"]';
        const savingButtonText = '@Localizer["SavingButtonText"]';

        // Initialize Lucide icons
        lucide.createIcons();

        // Delete function
                     function deleteVignette(id) {
            if (confirm(deleteConfirmMessage)) {
                fetch(`@Url.Action("Delete", "Vignette")/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'   // optional, but matches Index
                    }
                })
                .then(response => {
                    if (response.ok) {
                        const element = document.getElementById('vignette-' + id);
                        if (element) {
                            element.style.transition = 'all 0.3s ease';
                            element.style.opacity = '0';
                            element.style.transform = 'translateY(-10px)';
                            setTimeout(() => element.remove(), 300);
                        }
                    } else {
                        throw new Error('Delete failed');
                    }
                })
                .catch(error => {
                    alert(deleteErrorMessage);
                });
            }
        }

        // Form validation
        document.getElementById('vignetteForm')?.addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalContent = submitBtn.innerHTML;

            // Show loading state
            submitBtn.innerHTML = `
                <div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                ${savingButtonText}
            `;
            submitBtn.disabled = true;

            // Re-enable after 5 seconds if submission fails
            setTimeout(() => {
                submitBtn.innerHTML = originalContent;
                submitBtn.disabled = false;
            }, 5000);
        });

        // Format price input
        document.querySelector('input[name="VignettePrice"]')?.addEventListener('blur', function() {
            if (this.value && !isNaN(this.value)) {
                this.value = parseFloat(this.value).toFixed(2);
            }
        });
    </script>
</body>
</html>