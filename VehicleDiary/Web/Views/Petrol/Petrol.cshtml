@using VehicleDiary.Web.ViewModels
@model DBPetrolModelVM
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    var petrolCount = Model.PetrolViews?.Count();
    const int maxCount = 20;
    bool canAdd = petrolCount < maxCount;
}

<!DOCTYPE html>
<html lang="en">
<head>
    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
    @{
        var token = Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
    <meta name="csrf-token" content="@token" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["PageTitle"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'petrol': {
                            50: '#ecfdf5',
                            100: '#d1fae5',
                            200: '#a7f3d0',
                            300: '#6ee7b7',
                            400: '#34d399',
                            500: '#10b981',
                            600: '#059669',
                            700: '#047857',
                            800: '#065f46',
                            900: '#064e3b',
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <header class="bg-gradient-to-r from-gray-900 to-gray-800 text-white">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between py-4">
                <a href="@Url.Action("Index", "Vehicle")" class="flex items-center gap-2 px-3 py-2 bg-white/10 rounded-lg hover:bg-white/20 transition">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    <span class="font-medium">@Localizer["BackButton"]</span>
                </a>
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-petrol-500 to-green-500 flex items-center justify-center">
                        <i data-lucide="fuel" class="w-5 h-5"></i>
                    </div>
                    <div>
                        <h1 class="font-bold">@Localizer["HeaderTitle"]</h1>
                        <p class="text-sm text-gray-300">@Localizer["HeaderSubtitle"]</p>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
        <div class="max-w-6xl mx-auto">
            <!-- Page Title -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-2">@Localizer["MainHeading"]</h1>
                <p class="text-gray-600">@Localizer["MainSubheading"]</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Form Section -->
                <div class="space-y-6">
                    <!-- Form Card -->
                    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                        <div class="flex items-center gap-3 mb-6">
                            <div class="w-10 h-10 rounded-lg bg-petrol-100 flex items-center justify-center">
                                <i data-lucide="plus-circle" class="w-5 h-5 text-petrol-600"></i>
                            </div>
                            <div>
                                <h2 class="text-xl font-bold text-gray-900">@Localizer["AddFuelRecordHeading"]</h2>
                                <p class="text-sm text-gray-600">@Localizer["AddFuelRecordSubheading"]</p>
                            </div>
                        </div>

                        <form asp-action="Petrol" method="post" id="petrolForm">
                            <input type="hidden" asp-for="vehicleId" />

                            <div class="space-y-4">
                                <!-- Amount & Type -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label asp-for="PetrolAmount" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelFuelAmount"]
                                        </label>
                                        <div class="relative">
                                            <input type="number" step="0.1" asp-for="PetrolAmount"
                                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-petrol-500 focus:border-petrol-500"
                                                   placeholder="@Localizer["PlaceholderFuelAmount"]" required>
                                        </div>
                                        <span asp-validation-for="PetrolAmount" class="text-red-500 text-sm"></span>
                                    </div>

                                    <div>
                                        <label asp-for="PetrolType" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelFuelType"]
                                        </label>
                                        <input type="text" asp-for="PetrolType"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-petrol-500 focus:border-petrol-500"
                                               placeholder="@Localizer["PlaceholderFuelType"]" required>
                                        <span asp-validation-for="PetrolType" class="text-red-500 text-sm"></span>
                                    </div>
                                </div>

                                <!-- Price & Date -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label asp-for="PetrolPrice" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelTotalPrice"]
                                        </label>
                                        <div class="relative">
                                            <input type="number" step="0.01" asp-for="PetrolPrice"
                                                   class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-petrol-500 focus:border-petrol-500"
                                                   placeholder="@Localizer["PlaceholderTotalPrice"]" required>
                                        </div>
                                        <span asp-validation-for="PetrolPrice" class="text-red-500 text-sm"></span>
                                    </div>

                                    <div>
                                        <label asp-for="PetrolDate" class="block text-sm font-medium text-gray-700 mb-1">
                                            @Localizer["LabelRefuelDate"]
                                        </label>
                                        <input type="date" asp-for="PetrolDate"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-petrol-500 focus:border-petrol-500"
                                               value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                                        <span asp-validation-for="PetrolDate" class="text-red-500 text-sm"></span>
                                    </div>
                                </div>

                                <!-- Mileage -->
                                <div>
                                    <label asp-for="PetrolMileage" class="block text-sm font-medium text-gray-700 mb-1">
                                        @Localizer["LabelMileage"]
                                    </label>
                                    <input type="number" asp-for="PetrolMileage"
                                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-petrol-500 focus:border-petrol-500"
                                           placeholder="@Localizer["PlaceholderMileage"]">
                                    <span asp-validation-for="PetrolMileage" class="text-red-500 text-sm"></span>
                                </div>
                                <div class="pt-4">
                                <!-- Submit Button -->
                                @if(canAdd)
                                {
                                    <button type="submit"
                                            class="w-full bg-gradient-to-r from-petrol-600 to-green-600 text-white font-medium py-3 px-4 rounded-lg hover:from-petrol-700 hover:to-green-700 transition flex items-center justify-center gap-2">
                                        <i data-lucide="save" class="w-5 h-5"></i>
                                        @Localizer["SaveFuelRecordButton"]
                                        </button>
                                    }
                                    else
                                    {
                                        <p class="text-danger font-medium px-4 py-2 rounded-lg border border-danger/20 bg-danger/10" style="background-color: rgba(255,10,20,0.6)">
                                            <i class="fas fa-exclamation-triangle mr-2"></i>
                                            @petrolCount / @maxCount
                                        </p>
                                    }
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Quick Stats -->
                    @if (Model.PetrolViews != null && Model.PetrolViews.Any())
                    {
                        var totalCost = Model.PetrolViews.Sum(p => p.PetrolPrice);
                        var totalLiters = Model.PetrolViews.Sum(p => p.PetrolAmount);
                        var averagePricePerLiter = totalLiters > 0 ? totalCost / totalLiters : 0;

                        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
                            <h3 class="text-lg font-bold text-gray-900 mb-4">@Localizer["QuickStatsTitle"]</h3>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                                <div class="text-center p-3 bg-petrol-50 rounded-lg">
                                    <div class="text-2xl font-bold text-petrol-600">@Model.PetrolViews.Count()</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatRefuels"]</div>
                                </div>
                                <div class="text-center p-3 bg-petrol-50 rounded-lg">
                                    <div class="text-2xl font-bold text-petrol-600">€@totalCost.ToString("F2")</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatTotalCost"]</div>
                                </div>
                                <div class="text-center p-3 bg-petrol-50 rounded-lg">
                                    <div class="text-2xl font-bold text-petrol-600">@totalLiters.ToString("F1")L</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatTotalLiters"]</div>
                                </div>
                                <div class="text-center p-3 bg-petrol-50 rounded-lg">
                                    <div class="text-2xl font-bold text-petrol-600">€@averagePricePerLiter.ToString("F2")</div>
                                    <div class="text-sm text-gray-600">@Localizer["StatAvgPerLiter"]</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- History Section -->
                <div class="space-y-6">
                    <div class="flex items-center justify-between">
                        <h2 class="text-xl font-bold text-gray-900">@Localizer["HistoryTitle"]</h2>
                        <span class="text-sm text-gray-600">@Localizer["RecordsCount", Model.PetrolViews?.Count() ?? 0]</span>
                    </div>

                    @if (Model.PetrolViews != null && Model.PetrolViews.Any())
                    {
                        <div class="space-y-3">
                            @foreach (var entry in Model.PetrolViews.OrderByDescending(p => p.PetrolDate))
                            {
                                <div class="bg-white rounded-lg border border-gray-200 p-4 hover:border-petrol-300 transition" id="petrol-@entry.Id">
                                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                                        <!-- Left: Details -->
                                        <div class="flex-1">
                                            <div class="flex items-center gap-3 mb-2">
                                                <div class="w-8 h-8 rounded-lg bg-petrol-100 flex items-center justify-center">
                                                    <i data-lucide="fuel" class="w-4 h-4 text-petrol-600"></i>
                                                </div>
                                                <div>
                                                    <div class="flex items-center gap-2">
                                                        <span class="font-bold text-gray-900">@entry.PetrolType</span>
                                                        <span class="px-2 py-1 bg-petrol-100 text-petrol-700 text-xs font-medium rounded-full">
                                                            @entry.PetrolDate.ToString("d MMM yyyy")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="flex flex-wrap gap-2">
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                                    <i data-lucide="droplet" class="w-3 h-3"></i>
                                                    @Localizer["UnitLiters", entry.PetrolAmount]
                                                </span>
                                                @if (entry.PetrolMileage > 0)
                                                {
                                                    <span class="inline-flex items-center gap-1 px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                                                        <i data-lucide="gauge" class="w-3 h-3"></i>
                                                        @Localizer["UnitKilometers", entry.PetrolMileage]
                                                    </span>
                                                }
                                                <span class="inline-flex items-center gap-1 px-2 py-1 bg-petrol-100 text-petrol-700 text-sm rounded-full">
                                                    <i data-lucide="euro" class="w-3 h-3"></i>
                                                    €@entry.PetrolPrice
                                                </span>
                                            </div>
                                        </div>

                                        <!-- Right: Delete Button -->
                                        <button onclick="deletePetrol('@entry.Id')"
                                                class="inline-flex items-center gap-2 px-3 py-2 text-red-600 bg-red-50 hover:bg-red-100 rounded-lg transition">
                                            <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            <span class="text-sm font-medium">@Localizer["DeleteButton"]</span>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="bg-white rounded-xl border-2 border-dashed border-gray-300 p-8 text-center">
                            <div class="w-12 h-12 rounded-full bg-petrol-100 flex items-center justify-center mx-auto mb-4">
                                <i data-lucide="fuel" class="w-6 h-6 text-petrol-600"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">@Localizer["EmptyStateTitle"]</h3>
                            <p class="text-gray-600 mb-4">@Localizer["EmptyStateMessage"]</p>
                            <p class="text-sm text-gray-500">@Localizer["EmptyStateHint"]</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="border-t border-gray-200 mt-12">
        <div class="container mx-auto px-4 py-6">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4">
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-petrol-100 flex items-center justify-center">
                        <i data-lucide="fuel" class="w-4 h-4 text-petrol-600"></i>
                    </div>
                    <span class="font-medium text-gray-900">@Localizer["FooterBrandName"]</span>
                </div>
                <p class="text-sm text-gray-600">@Localizer["FooterCopyright", DateTime.Now.Year]</p>
            </div>
        </div>
    </footer>

    <script>
        // Localized strings for JavaScript
        const deleteConfirmMessage = '@Localizer["ConfirmDelete"]';
        const deleteErrorMessage = '@Localizer["ErrorDelete"]';
        const savingButtonText = '@Localizer["SavingButtonText"]';

        // Initialize Lucide icons
        lucide.createIcons();

        // Delete function
                 function deletePetrol(id) {
            if (confirm(deleteConfirmMessage)) {
                fetch(`@Url.Action("Delete", "Petrol")/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'   // optional, but matches Index
                    }
                })
                .then(response => {
                    if (response.ok) {
                        const element = document.getElementById('petrol-' + id);
                        if (element) {
                            element.style.transition = 'all 0.3s ease';
                            element.style.opacity = '0';
                            element.style.transform = 'translateY(-10px)';
                            setTimeout(() => element.remove(), 300);
                        }
                    } else {
                        throw new Error('Delete failed');
                    }
                })
                .catch(error => {
                    alert(deleteErrorMessage);
                });
            }
        }

        // Form validation
        document.getElementById('petrolForm')?.addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalContent = submitBtn.innerHTML;

            // Show loading state
            submitBtn.innerHTML = `
                <div class="w-5 h-5 border-2 border-white border-t-transparent rounded-full animate-spin"></div>
                ${savingButtonText}
            `;
            submitBtn.disabled = true;

            // Re-enable after 5 seconds if submission fails
            setTimeout(() => {
                submitBtn.innerHTML = originalContent;
                submitBtn.disabled = false;
            }, 5000);
        });

        // Format inputs
        document.querySelectorAll('input[type="number"]').forEach(input => {
            input.addEventListener('blur', function() {
                if (this.value && !isNaN(this.value)) {
                    if (this.name.includes('Price')) {
                        this.value = parseFloat(this.value).toFixed(2);
                    } else if (this.name.includes('Amount')) {
                        this.value = parseFloat(this.value).toFixed(1);
                    } else if (this.name.includes('Mileage')) {
                        this.value = parseInt(this.value);
                    }
                }
            });
        });
    </script>
</body>
</html>