@using VehicleDiary.Web.ViewModels
@model DBDiagnosticVehicleModelVM
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["Diagnostic History"] - VehicleDiary</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
          theme: {
            extend: {
              colors: {
                background: 'hsl(0, 0%, 99%)',
                foreground: 'hsl(222, 47%, 11%)',
                card: 'hsl(0, 0%, 100%)',
                'card-foreground': 'hsl(222, 47%, 11%)',
                primary: 'hsl(24, 95%, 53%)',
                'primary-foreground': 'hsl(0, 0%, 100%)',
                secondary: 'hsl(215, 20%, 95%)',
                'secondary-foreground': 'hsl(222, 47%, 11%)',
                muted: 'hsl(215, 20%, 96%)',
                'muted-foreground': 'hsl(215, 16%, 47%)',
                accent: 'hsl(24, 95%, 53%)',
                border: 'hsl(215, 20%, 91%)',
                success: 'hsl(160, 84%, 39%)',
                warning: 'hsl(38, 92%, 50%)',
                danger: 'hsl(0, 84%, 60%)',
              },
              fontFamily: {
                heading: ['Space Grotesk', 'sans-serif'],
                body: ['Inter', 'sans-serif'],
              },
              boxShadow: {
                'soft': '0 4px 24px -2px rgba(30, 41, 59, 0.08)',
                'elevated': '0 12px 40px -8px rgba(30, 41, 59, 0.12)',
                'card': '0 8px 24px rgba(149, 157, 165, 0.15)',
              },
              animation: {
                'fade-in': 'fadeIn 0.3s ease-out',
                'slide-down': 'slideDown 0.3s ease-out',
              },
              keyframes: {
                fadeIn: {
                  '0%': { opacity: '0' },
                  '100%': { opacity: '1' },
                },
                slideDown: {
                  '0%': { opacity: '0', transform: 'translateY(-10px)' },
                  '100%': { opacity: '1', transform: 'translateY(0)' },
                }
              }
            },
          },
        }
    </script>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: hsl(0, 0%, 99%);
            color: hsl(222, 47%, 11%);
            -webkit-font-smoothing: antialiased;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Space Grotesk', sans-serif;
        }

        .btn-primary-gradient {
            background: linear-gradient(135deg, hsl(24, 95%, 53%) 0%, hsl(24, 95%, 43%) 100%);
            transition: all 0.2s ease;
        }

            .btn-primary-gradient:hover {
                box-shadow: 0 0 20px rgba(249, 115, 22, 0.3);
                transform: translateY(-2px);
            }

        .glass-card {
            background: white;
            border-radius: 16px;
            border: 1px solid hsl(215, 20%, 91%);
        }

        .input-field {
            transition: all 0.2s ease;
        }

            .input-field:focus {
                box-shadow: 0 0 0 3px rgba(249, 115, 22, 0.1);
                border-color: hsl(24, 95%, 53%);
            }
    </style>
</head>
<body class="bg-gradient-to-br from-background via-white to-secondary min-h-screen">
    <div class="container mx-auto px-4 py-6 sm:py-8 md:py-12">
        <!-- Header Section -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6 sm:mb-8">
            <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-xl flex items-center justify-center" style="background: linear-gradient(135deg, hsl(24, 95%, 53%), hsl(24, 95%, 43%));">
                    <i class="fas fa-stethoscope text-white text-lg"></i>
                </div>
                <div>
                    <h1 class="text-2xl sm:text-3xl font-bold text-foreground">@Localizer["Diagnostic History"]</h1>
                    <p class="text-muted-foreground text-sm">Manage your vehicle diagnostic records</p>
                </div>
            </div>

            <a asp-controller="DiagnosticVehicle" asp-action="Create" asp-route-vehicleIDRoute="@Model.VehicleId"
               class="btn-primary-gradient text-white font-semibold px-6 py-3 rounded-xl text-base sm:text-lg transition-all duration-200 shadow-lg flex items-center justify-center gap-2 w-full sm:w-auto">
                <i class="fas fa-plus-circle"></i>
                <span>@Localizer["Add New Diagnostic"]</span>
            </a>
        </div>

        <!-- Filter Section -->
        <div class="glass-card shadow-card mb-6 sm:mb-8 overflow-hidden">
            <div class="bg-gradient-to-r from-orange-50 to-amber-50 px-5 py-4 border-b border-orange-100 cursor-pointer" id="filterToggle">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-lg flex items-center justify-center" style="background: hsla(24, 95%, 53%, 0.2);">
                            <i class="fas fa-filter" style="color: hsl(24, 95%, 53%);"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-foreground">@Localizer["Filters"]</h3>
                    </div>
                    <span class="filter-toggle-icon" style="color: hsl(24, 95%, 53%);">
                        <i class="fas fa-chevron-down transition-transform duration-300"></i>
                    </span>
                </div>
            </div>

            <div class="filter-content animate-slide-down" id="filterContent" style="display: none;">
                <div class="p-5 space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                        <!-- Category Filter -->
                        <div class="space-y-2">
                            <label class="block text-sm font-medium text-foreground">@Localizer["Category"]</label>
                            <select class="w-full px-4 py-3 rounded-xl border border-border bg-white focus:outline-none input-field" id="filterCategory">
                                <option value="">@Localizer["All Categories"]</option>
                                <option value="Diagnostics" selected>@Localizer["Vehicle Diagnostics"]</option>
                            </select>
                        </div>

                        <!-- Type Filter -->
                        <div class="space-y-2">
                            <label class="block text-sm font-medium text-foreground">@Localizer["Diagnostic Type"]</label>
                            <select class="w-full px-4 py-3 rounded-xl border border-border bg-white focus:outline-none input-field" id="filterType">
                                <option value="">@Localizer["All Types"]</option>
                                <option value="Coding">@Localizer["Coding"]</option>
                                <option value="Error Diagnostics">@Localizer["Error Diagnostics"]</option>
                                <option value="Software Update">@Localizer["Software Update"]</option>
                                <option value="Tuning">@Localizer["Tuning"]</option>
                                <option value="Other">@Localizer["Other"]</option>
                            </select>
                        </div>

                        <!-- Date Range -->
                        <div class="space-y-2">
                            <label class="block text-sm font-medium text-foreground">@Localizer["Date Range"]</label>
                            <div class="space-y-2">
                                <input type="date" class="w-full px-4 py-3 rounded-xl border border-border bg-white focus:outline-none input-field" id="filterDateFrom" placeholder="@Localizer["From"]">
                                <input type="date" class="w-full px-4 py-3 rounded-xl border border-border bg-white focus:outline-none input-field" id="filterDateTo" placeholder="@Localizer["To"]">
                            </div>
                        </div>

                        <!-- Price Range -->
                        <div class="space-y-2">
                            <label class="block text-sm font-medium text-foreground">@Localizer["Price Range"]</label>
                            <div class="flex items-center gap-2">
                                <input type="number" class="w-full px-4 py-3 rounded-xl border border-border bg-white focus:outline-none input-field" id="filterPriceMin" placeholder="@Localizer["Min"]" step="0.01">
                                <span class="text-muted-foreground">-</span>
                                <input type="number" class="w-full px-4 py-3 rounded-xl border border-border bg-white focus:outline-none input-field" id="filterPriceMax" placeholder="@Localizer["Max"]" step="0.01">
                            </div>
                        </div>
                    </div>

                    <!-- Filter Buttons -->
                    <div class="flex flex-col sm:flex-row gap-3 pt-2">
                        <button class="px-6 py-3 rounded-xl border border-border bg-white hover:bg-secondary transition-colors duration-200 font-medium flex items-center justify-center gap-2 w-full sm:w-auto" id="resetFilters">
                            <i class="fas fa-redo"></i>
                            <span>@Localizer["Reset Filters"]</span>
                        </button>
                        <button class="btn-primary-gradient text-white font-semibold px-6 py-3 rounded-xl transition-all duration-200 shadow-lg flex items-center justify-center gap-2 w-full sm:w-auto" id="applyFilters">
                            <i class="fas fa-check"></i>
                            <span>@Localizer["Apply Filters"]</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Count -->
        <div class="mb-4 sm:mb-6">
            <div class="text-muted-foreground" id="resultsCount">
                <span class="font-medium">@Localizer["Showing"] <span id="filteredCount" class="font-bold" style="color: hsl(24, 95%, 53%);">@(Model.RepairViews?.Count() ?? 0)</span> @Localizer["diagnostic records"]</span>
            </div>
        </div>

        <!-- Diagnostic History Cards -->
        @if (Model.RepairViews != null && Model.RepairViews.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6" id="diagnosticCardsContainer">
                @foreach (var diagnostic in Model.RepairViews)
                {
                    <div class="diagnostic-card glass-card shadow-card hover:shadow-elevated transition-all duration-300 animate-fade-in"
                         id="diagnostic-@diagnostic.ID"
                         data-category="@diagnostic.DiagnosticVCategory"
                         data-type="@diagnostic.DiagnosticVType"
                         data-date="@diagnostic.DiagnosticVWhen.ToString("yyyy-MM-dd")"
                         data-price="@(diagnostic.DiagnosticVPrice ?? 0)"
                         data-error-type="@diagnostic.DiagnosticVErrorType">

                        <!-- Card Header -->
                        <div class="bg-gradient-to-r from-orange-50 to-amber-50 px-5 py-4 border-b border-orange-100">
                            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                                <span class="px-3 py-1 rounded-full text-white text-sm font-semibold" style="background: linear-gradient(135deg, hsl(24, 95%, 53%), hsl(24, 95%, 43%));">
                                    @diagnostic.DiagnosticVCategory
                                </span>
                                <span class="text-muted-foreground text-sm font-medium">
                                    @diagnostic.DiagnosticVWhen.ToString("d MMM yyyy")
                                </span>
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="p-5 space-y-4">
                            <!-- Type -->
                            <div class="flex items-center gap-2">
                                <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: hsla(24, 95%, 53%, 0.1);">
                                    <i class="fas fa-tools" style="color: hsl(24, 95%, 53%); font-size: 0.875rem;"></i>
                                </div>
                                <span class="font-semibold text-foreground">@diagnostic.DiagnosticVType</span>
                            </div>

                            <!-- Diagnostic Name -->
                            <h4 class="text-xl font-bold text-foreground">@diagnostic.DiagnosticVName</h4>

                            <!-- Details Grid -->
                            <div class="space-y-3">
                                <!-- Diagnostic Tool -->
                                @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVDiagnosticType))
                                {
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: hsla(215, 20%, 96%, 1);">
                                            <i class="fas fa-laptop-medical text-muted-foreground"></i>
                                        </div>
                                        <div>
                                            <p class="text-sm text-muted-foreground">@Localizer["Tool"]</p>
                                            <p class="font-medium">@diagnostic.DiagnosticVDiagnosticType</p>
                                        </div>
                                    </div>
                                }

                                <!-- Error Type -->
                                @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVErrorType))
                                {
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: hsla(215, 20%, 96%, 1);">
                                            <i class="fas fa-exclamation-triangle text-amber-500"></i>
                                        </div>
                                        <div>
                                            <p class="text-sm text-muted-foreground">@Localizer["Error Type"]</p>
                                            <p class="font-medium">@diagnostic.DiagnosticVErrorType</p>
                                        </div>
                                    </div>
                                }

                                <!-- Error Code -->
                                @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVErrorCode))
                                {
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: hsla(215, 20%, 96%, 1);">
                                            <i class="fas fa-barcode text-muted-foreground"></i>
                                        </div>
                                        <div>
                                            <p class="text-sm text-muted-foreground">@Localizer["Error Code"]</p>
                                            <div class="px-2 py-1 rounded bg-red-50 border border-red-200 inline-block">
                                                <code class="text-red-600 font-bold">@diagnostic.DiagnosticVErrorCode</code>
                                            </div>
                                        </div>
                                    </div>
                                }

                                <!-- Error Description -->
                                @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVErrorDis))
                                {
                                    <div class="p-3 rounded-lg border border-amber-200 bg-amber-50">
                                        <div class="flex items-center gap-2 mb-1">
                                            <i class="fas fa-comment-dots text-amber-600"></i>
                                            <span class="text-sm font-medium text-amber-700">@Localizer["Description"]</span>
                                        </div>
                                        <p class="text-amber-800">@diagnostic.DiagnosticVErrorDis</p>
                                    </div>
                                }

                                <!-- Mileage -->
                                @if (diagnostic.DiagnosticVMileage.HasValue && diagnostic.DiagnosticVMileage > 0)
                                {
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: hsla(215, 20%, 96%, 1);">
                                            <i class="fas fa-tachometer-alt text-muted-foreground"></i>
                                        </div>
                                        <div>
                                            <p class="text-sm text-muted-foreground">@Localizer["Mileage"]</p>
                                            <p class="font-medium">@diagnostic.DiagnosticVMileage km</p>
                                        </div>
                                    </div>
                                }

                                <!-- Technician -->
                                @if (!string.IsNullOrEmpty(diagnostic.UpgradeVTechnician))
                                {
                                    <div class="flex items-center gap-3">
                                        <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: hsla(215, 20%, 96%, 1);">
                                            <i class="fas fa-user-md text-muted-foreground"></i>
                                        </div>
                                        <div>
                                            <p class="text-sm text-muted-foreground">@Localizer["Technician"]</p>
                                            <p class="font-medium">@diagnostic.UpgradeVTechnician</p>
                                        </div>
                                    </div>
                                }

                                <!-- File Download -->
                                @if (!string.IsNullOrEmpty(diagnostic.FileName))
                                {
                                    <div class="flex items-center gap-3 p-3 rounded-lg" style="background: hsla(24, 95%, 53%, 0.05); border-left: 3px solid hsl(24, 95%, 53%);">
                                        <i class="fas fa-paperclip" style="color: hsl(24, 95%, 53%);"></i>
                                        <a href="@Url.Action("Download", "DiagnosticVehicle", new { id = diagnostic.ID })" class="font-medium hover:underline" style="color: hsl(24, 95%, 53%);" target="_blank">
                                            @diagnostic.FileName
                                        </a>
                                    </div>
                                }

                                <!-- Notes -->
                                @if (!string.IsNullOrEmpty(diagnostic.DiagnosticVNotes))
                                {
                                    <div class="p-3 rounded-lg border border-border">
                                        <div class="flex items-center gap-2 mb-2">
                                            <i class="fas fa-sticky-note text-muted-foreground"></i>
                                            <span class="text-sm font-medium text-muted-foreground">@Localizer["Notes"]</span>
                                        </div>
                                        <p class="text-foreground">@diagnostic.DiagnosticVNotes</p>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Card Footer -->
                        <div class="px-5 py-4 border-t border-border" style="background: hsl(24, 95%, 97%);">
                            <div class="flex items-center justify-between">
                                <!-- Price -->
                                @if (diagnostic.DiagnosticVPrice.HasValue)
                                {
                                    <div>
                                        <span class="text-2xl font-bold" style="color: hsl(160, 84%, 39%);">
                                            €@diagnostic.DiagnosticVPrice.Value.ToString("N2")
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted-foreground font-medium">
                                        @Localizer["No Cost"]
                                    </div>
                                }

                                <!-- Actions -->
                                <div class="flex items-center gap-2">
                                    <button onclick="editDiagnostic('@diagnostic.ID')"
                                            class="w-10 h-10 rounded-lg border hover:border-primary hover:bg-primary hover:text-white transition-colors duration-200 flex items-center justify-center"
                                            style="border-color: hsl(24, 95%, 53%); color: hsl(24, 95%, 53%);"
                                            title="@Localizer["Edit"]">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button onclick="deleteDiagnostic('@diagnostic.ID')"
                                            class="w-10 h-10 rounded-lg border hover:border-danger hover:bg-danger hover:text-white transition-colors duration-200 flex items-center justify-center"
                                            style="border-color: hsl(0, 84%, 60%); color: hsl(0, 84%, 60%);"
                                            title="@Localizer["Delete"]">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="glass-card shadow-elevated p-8 sm:p-12 text-center max-w-2xl mx-auto animate-fade-in">
                <div class="w-20 h-20 rounded-2xl flex items-center justify-center mx-auto mb-6" style="background: hsla(24, 95%, 53%, 0.1);">
                    <i class="fas fa-stethoscope text-3xl" style="color: hsl(24, 95%, 53%);"></i>
                </div>
                <h3 class="text-2xl font-bold text-foreground mb-3">@Localizer["No Diagnostic Records"]</h3>
                <p class="text-muted-foreground mb-8 max-w-md mx-auto">@Localizer["No diagnostic records available for this vehicle."]</p>
                <a asp-controller="DiagnosticVehicle" asp-action="Create" asp-route-vehicleIDRoute="@Model.VehicleId"
                   class="btn-primary-gradient text-white font-semibold px-8 py-4 rounded-xl text-lg transition-all duration-200 shadow-lg inline-flex items-center justify-center gap-3">
                    <i class="fas fa-plus-circle"></i>
                    <span>@Localizer["Add First Diagnostic"]</span>
                </a>
            </div>
        }
    </div>

    <!-- Toast Notification -->
    <div id="toast" class="fixed top-4 right-4 z-50 hidden animate-slide-down">
        <div class="glass-card shadow-elevated p-4 min-w-[300px] max-w-md">
            <div class="flex items-center gap-3">
                <div id="toastIcon" class="w-10 h-10 rounded-full flex items-center justify-center"></div>
                <div class="flex-1">
                    <p id="toastMessage" class="font-medium"></p>
                </div>
                <button onclick="hideToast()" class="text-muted-foreground hover:text-foreground">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function deleteDiagnostic(id) {
            if (confirm("Are you sure you want to delete this diagnostic record?")) {
                $.ajax({
                    url: "@Url.Action("Delete", "DiagnosticVehicle")/" + id,
                    type: "DELETE",
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (result) {
                        $("#diagnostic-" + id).fadeOut(300, function() {
                            $(this).remove();
                            updateResultsCount();
                            if ($(".diagnostic-card").length === 0) {
                                location.reload();
                            }
                        });
                        showToast('Diagnostic record deleted successfully', 'success');
                    },
                    error: function (err) {
                        console.error(err);
                        showToast('An error occurred while deleting the diagnostic record', 'error');
                    }
                });
            }
        }

        function editDiagnostic(id) {
            window.location.href = '@Url.Action("Edit", "DiagnosticVehicle")/' + id;
        }

        function showToast(message, type) {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = document.getElementById('toastIcon');

            toastMessage.textContent = message;

            if (type === 'success') {
                toastIcon.innerHTML = '<i class="fas fa-check-circle text-white"></i>';
                toastIcon.className = 'w-10 h-10 rounded-full flex items-center justify-center';
                toastIcon.style.background = 'linear-gradient(135deg, hsl(160, 84%, 39%), hsl(172, 66%, 50%))';
            } else {
                toastIcon.innerHTML = '<i class="fas fa-exclamation-circle text-white"></i>';
                toastIcon.className = 'w-10 h-10 rounded-full flex items-center justify-center';
                toastIcon.style.background = 'linear-gradient(135deg, hsl(0, 84%, 60%), hsl(0, 72%, 51%))';
            }

            toast.classList.remove('hidden');
            setTimeout(hideToast, 5000);
        }

        function hideToast() {
            document.getElementById('toast').classList.add('hidden');
        }

        $(document).ready(function() {
            // Toggle filter section
            $('#filterToggle').click(function() {
                $('#filterContent').slideToggle(300);
                $('.filter-toggle-icon i').toggleClass('fa-chevron-down fa-chevron-up');
            });

            // Apply filters
            $('#applyFilters').click(function() {
                applyFilters();
            });

            // Reset filters
            $('#resetFilters').click(function() {
                $('#filterCategory').val('Diagnostics');
                $('#filterType').val('');
                $('#filterDateFrom').val('');
                $('#filterDateTo').val('');
                $('#filterPriceMin').val('');
                $('#filterPriceMax').val('');
                applyFilters();
            });

            // Apply filters when values change
            $('.filter-select, .filter-date, .filter-price').change(function() {
                applyFilters();
            });

            function applyFilters() {
                const categoryFilter = $('#filterCategory').val();
                const typeFilter = $('#filterType').val();
                const dateFromFilter = $('#filterDateFrom').val();
                const dateToFilter = $('#filterDateTo').val();
                const priceMinFilter = $('#filterPriceMin').val();
                const priceMaxFilter = $('#filterPriceMax').val();

                $('.diagnostic-card').each(function() {
                    let show = true;
                    const category = $(this).data('category');
                    const type = $(this).data('type');
                    const date = $(this).data('date');
                    const price = parseFloat($(this).data('price'));

                    // Category filter
                    if (categoryFilter && category !== categoryFilter) {
                        show = false;
                    }

                    // Type filter
                    if (typeFilter && type !== typeFilter) {
                        show = false;
                    }

                    // Date filter
                    if (dateFromFilter && date < dateFromFilter) {
                        show = false;
                    }
                    if (dateToFilter && date > dateToFilter) {
                        show = false;
                    }

                    // Price filter
                    if (priceMinFilter && price < parseFloat(priceMinFilter)) {
                        show = false;
                    }
                    if (priceMaxFilter && price > parseFloat(priceMaxFilter)) {
                        show = false;
                    }

                    if (show) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });

                updateResultsCount();
            }

            function updateResultsCount() {
                const visibleCount = $('.diagnostic-card:visible').length;
                const totalCount = $('.diagnostic-card').length;
                $('#filteredCount').text(visibleCount);

                if (visibleCount === 0 && totalCount > 0) {
                    $('#resultsCount').html('<span class="text-danger font-medium"><i class="fas fa-exclamation-circle mr-1"></i>No records match your filters</span>');
                } else {
                    $('#resultsCount').html('<span class="font-medium">@Localizer["Showing"] <span id="filteredCount" class="font-bold" style="color: hsl(24, 95%, 53%);">' + visibleCount + '</span> @Localizer["diagnostic records"]</span>');
                }
            }

            // Initialize filters
            updateResultsCount();
        });
    </script>
