<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VehicleDiary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VehicleDiary.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body >
    <header class="sticky-top">
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom border-2 border-light py-3">
            <div class="container">
                <!-- Brand with modern typography -->
                <a class="navbar-brand fw-bold fs-4 text-primary" asp-area="" asp-controller="Main" asp-action="Index">
                    <span class="align-middle">VehicleDiary</span>
                </a>

                <!-- Responsive Toggler -->
                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Items -->
                <div class="collapse navbar-collapse" id="mainNav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Authenticated Menu -->
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark px-3 py-2 rounded-3"
                                   asp-controller="Vehicle"
                                   asp-action="Index">
                                    <i class="fas fa-car me-2"></i>My Garage
                                </a>
                            </li>
                        </ul>

                        <!-- Logout Button -->
                        <form class="d-flex ms-auto" asp-area="Identity" asp-page="/Account/Logout" method="post">
                            <button type="submit" class="btn btn-link text-dark text-decoration-none px-3 py-2">
                                <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                            </button>
                        </form>
                    }
                    else
                    {
                        <!-- Guest Menu -->
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="btn btn-outline-primary px-4 mx-2"
                                   asp-area="Identity"
                                   asp-page="/Account/Login">
                                    Sign In
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary px-4 shadow-sm"
                                   asp-area="Identity"
                                   asp-page="/Account/Register">
                                    Get Started
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewBag.IsFooter == true)
    {
    <footer class="bg-light border-top text-muted" id="IDFooter">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    &copy; 2025 VehicleDiary - Automotive Maintenance Solutions<br>
                    <small>Crafted with precision for vehicle enthusiasts</small>
                </div>
            </div>
        </div>
    </footer>
    }

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
