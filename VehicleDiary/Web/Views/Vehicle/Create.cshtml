@{
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Brand</label>
        <input type="text" asp-for="Name" class="form-control" id="VehicleName" placeholder="Enter Vehicle Brand">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input type="text" asp-for="Model" class="form-control" id="VehicleModel"  placeholder="Enter Vehicle Model">
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="License_plate">License Plate</label>
        <input type="text" asp-for="License_plate" class="form-control" id="VehicleLicensePlate"  placeholder="Enter Vehicle License Plate">
        <span asp-validation-for="License_plate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VIN">VIN</label>
        <input type="text" asp-for="VIN" class="form-control" id="exampleInputEmail1"  placeholder="Enter Vehicle VIN">
        <span asp-validation-for="VIN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Insurence">Insurence</label>
        <input type="text" asp-for="Insurence" class="form-control" id="exampleInputEmail1"  placeholder="Enter Vehicle Insurence">
        <span asp-validation-for="Insurence" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Power">Horsepower</label>
        <input type="text" asp-for="Power" class="form-control" maxlength="6" id="exampleInputEmail1" placeholder="Enter Vehicle Horsepower">
        <span asp-validation-for="Power" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MadeYear">Year was made</label>
        <input type="text" asp-for="MadeYear" maxlength="4" class="form-control" id="exampleInputEmail1" placeholder="Enter Vehicle Made Year">
        <span asp-validation-for="MadeYear" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input type="text" asp-for="Description" class="form-control" id="exampleInputEmail1"  placeholder="Enter Your Vehicle Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>
	@section Scripts{
	   @{
	         await Html.RenderPartialAsync("_ValidationScriptsPartial");
	     }
}

