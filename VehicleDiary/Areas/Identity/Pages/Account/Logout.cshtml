@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
    ViewBag.Footer = true;
}

<div class="min-h-[calc(100vh-64px)] flex items-center justify-center bg-background px-4">
    <div class="max-w-md w-full">
        <div class="bg-card rounded-2xl shadow-elevated border border-border p-8">
            <div class="text-center mb-8">
                <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-sign-out-alt text-2xl text-primary"></i>
                </div>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <h1 class="font-heading font-bold text-2xl text-foreground mb-2">Ready to leave?</h1>
                    <p class="text-muted-foreground">Confirm below to log out of your account</p>
                }
                else
                {
                    <h1 class="font-heading font-bold text-2xl text-foreground mb-2">Signed Out</h1>
                    <p class="text-muted-foreground">You have successfully logged out</p>
                }
            </div>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity"
                      asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                      method="post"
                      class="space-y-6">

                    <button type="submit"
                            class="w-full bg-primary text-primary-foreground font-semibold py-3.5 px-6 rounded-lg hover:shadow-glow transition-all duration-300 flex items-center justify-center space-x-2">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Log out</span>
                    </button>

                    <div class="text-center pt-4 border-t border-border">
                        <p class="text-sm text-muted-foreground">
                            Changed your mind?
                            <a asp-page="/Index" class="font-semibold text-primary hover:text-primary/80 ml-1">Back to Home</a>
                        </p>
                    </div>
                </form>
            }
            else
            {
                <div class="space-y-6">
                    <div class="bg-green-50 border border-green-200 rounded-lg p-4 text-center">
                        <div class="flex items-center justify-center space-x-2 text-green-600">
                            <i class="fas fa-check-circle text-xl"></i>
                            <span class="font-semibold">You are now logged out</span>
                        </div>
                    </div>

                    <a asp-area="" asp-page="/Index"
                       class="block w-full bg-secondary text-secondary-foreground font-semibold py-3.5 px-6 rounded-lg hover:bg-secondary/80 transition-colors text-center">
                        Back to Home
                    </a>
                </div>
            }

            <div class="mt-8 pt-6 border-t border-border">
                <p class="text-xs text-muted-foreground text-center">
                    Having trouble?
                    <a href="#" class="text-primary hover:text-primary/80">Contact Support</a>
                </p>
            </div>
        </div>
    </div>
</div>